<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>Név</th>
            <th>Típus</th>
            <th>Alap</th>
            <th>Recept</th>
            <th>Megtekint</th>
            <th>Funkciók</th>
        </tr>   
    </thead>
    <tbody> 
        {{#each recipes}}
        <tr>
            <td>{{name}}</td>
            <td><span class="label label-danger">{{type}}</span></td>
            <td>{{base}}</td>
            <td><span class="badge"></span> {{recipe}}</td>
            <td>{{link-to "Megtekint" "recipes.view" this class="btn btn-default btn-sm"}}</td>
            <td>{{link-to "Szerkeszt" "recipes.edit" this class="btn btn-default btn-sm"}}
            <button {{action "deleteRecipe" this}} class="btn btn-default btn-sm">Töröl</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>



