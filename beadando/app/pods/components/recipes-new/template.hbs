<form class="form-horizontal" method="post">
    <fieldset>
        <div class="form-group {{if recipes.name "has-error"}}">
            <label for="name" class="col-lg-2 control-label">Név</label>
            <div class="col-lg-10">
                <input class="form-control" id="name" name="name" type="text" value="{{data.name}}">
                <span class="help-block">{{recipes.name}}</span>
            </div>
        </div>
        
        <div class="form-group {{if recipes.type "has-error"}}">
            <label for="type" class="col-lg-2 control-label">Típus</label>
            <div class="col-lg-10">
                <input class="form-control" id="type" name="type" type="text" value="{{data.type}}">
                <span class="help-block">{{recipes.type}}</span>
            </div>
        </div>
        
        <div class="form-group {{if recipes.base "has-error"}}">
            <label for="base" class="col-lg-2 control-label">Alap</label>
            <div class="col-lg-10">
                <input class="form-control" id="base" name="base" type="text" value="{{data.base}}">
                <span class="help-block">{{recipes.base}}</span>
            </div>
        </div>
                <div class="form-group {{if recipes.recipe "has-error"}}">
            <label for="recipe" class="col-lg-2 control-label">Leírás</label>
            <div class="col-lg-10">
                <textarea class="form-control" rows="3" id="recipe" name="recipe"  placeholder="pl. 4 cl vodka, 4cl narancslé... stb" >{{data.recipe}}</textarea>
                <span class="help-block">{{recipes.recipe}}</span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button {{action "submit"}} class="btn btn-primary">Submit</button>
            </div>
        </div>
    </fieldset>
</form>  